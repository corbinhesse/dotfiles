[include]
	path = ~/.gitconfig.local
[init]
	defaultBranch = main
[apply]
	whitespace = nowarn
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[color "diff"]
	meta = magenta dim
[color "status"]
	header = dim
	branch = cyan
	added = green
	changed = yellow
	untracked = red
[color "decorate"]
	tag = cyan
[commit]
	verbose = true
[core]
	excludesfile = ~/.gitignore
	editor = nvim
	mergeoptions = --no-edit
	pager = delta
[difftool]
	prompt = false
[help]
	autocorrect = 1
[push]
	default = simple
[pull]
	rebase = false
[interactive]
	diffFilter = delta --color-only
[delta]
	features = line-numbers decorations
	side-by-side = true
[delta "decorations"]
	commit-decoration-style = yellow box ul
	file-style = italic magenta
	file-decoration-style = magenta box
	hunk-header-style = omit
	minus-style = syntax "#543033"
	minus-emph-style = syntax "#8D3B3D"
	minus-empty-line-marker-style = normal red
	plus-style = syntax "#40503E"
	plus-emph-style = syntax "#647D55"
	plus-empty-line-marker-style = normal green
	tabs = 2
	whitespace-error-style = red reverse
[delta "line-numbers"]
	line-numbers-left-style = 8
	line-numbers-right-style = 8
	line-numbers-zero-style = 8
	line-numbers-minus-style = red
	line-numbers-plus-style = green
[gpg]
	program = gpg
